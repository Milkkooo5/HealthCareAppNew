<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <ImageView
        android:id="@+id/icon12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_133"
        android:elevation="1dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="36dp" />

    <ScrollView
        android:layout_marginTop="37dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:text="Профиль"
                android:textSize="24sp"
                android:textColor="@color/lightblue"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp" />

            <!-- Имя -->
            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя:"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:textColor="@color/lightblue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Иван"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Фамилия -->
            <TextView
                android:id="@+id/surnameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фамилия:"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:textColor="@color/lightblue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/surnameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Иванов"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Отчество -->
            <TextView
                android:id="@+id/middleNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отчество:"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:textColor="@color/lightblue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/middleNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Иванович"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Полис ОМС -->
            <TextView
                android:id="@+id/omsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Полис ОМС:"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:textColor="@color/lightblue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/omsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123-456-789"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Дата рождения -->
            <TextView
                android:id="@+id/birthDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата рождения:"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:textColor="@color/lightblue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/birthDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.01.1980"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
